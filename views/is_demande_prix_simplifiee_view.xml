<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- S√©quence pour la num√©rotation automatique -->
    <record id="seq_is_demande_prix_simplifiee" model="ir.sequence">
        <field name="name">Demande de prix simplifi√©e</field>
        <field name="code">is.demande.prix.simplifiee</field>
        <field name="prefix"></field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Vue Formulaire - optimis√©e pour smartphone -->
    <record id="is_demande_prix_simplifiee_form" model="ir.ui.view">
        <field name="name">is.demande.prix.simplifiee.form</field>
        <field name="model">is.demande.prix.simplifiee</field>
        <field name="arch" type="xml">
            <form string="Demande de prix simplifi√©e">
                <header>
                    <button 
                        name="generer_commandes_action" 
                        type="object" 
                        string="G√©n√©rer les demandes de prix et envoyer" 
                        class="btn-primary"
                        invisible="state != 'brouillon' or type_demande != 'demande_prix'"
                        confirm="Voulez-vous g√©n√©rer les demandes de prix et les envoyer aux fournisseurs ?"
                    />
                    <button 
                        name="generer_commandes_action" 
                        type="object" 
                        string="G√©n√©rer les commandes et envoyer" 
                        class="btn-primary"
                        invisible="state != 'brouillon' or type_demande != 'commande'"
                        confirm="Voulez-vous g√©n√©rer les commandes et les envoyer aux fournisseurs ?"
                    />
                    <button 
                        name="voir_commandes_action" 
                        type="object" 
                        string="Voir les demandes de prix" 
                        class="btn-secondary"
                        invisible="purchase_order_count == 0 or type_demande != 'demande_prix'"
                    />
                    <button 
                        name="voir_commandes_action" 
                        type="object" 
                        string="Voir les commandes" 
                        class="btn-secondary"
                        invisible="purchase_order_count == 0 or type_demande != 'commande'"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="brouillon,envoye"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archiv√©" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button 
                            name="voir_commandes_action" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-shopping-cart"
                            invisible="purchase_order_count == 0"
                        >
                            <field name="purchase_order_count" widget="statinfo" string="Commandes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" placeholder="Nouveau"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_demande" widget="radio" readonly="state == 'envoye'"/>
                            <field name="affaire_id" readonly="state == 'envoye'"/>
                        </group>
                        <group>
                            <field name="create_date" string="Date de cr√©ation"/>
                            <field name="create_uid" string="Cr√©√© par"/>
                        </group>
                    </group>
                    <group string="Demande">
                        <field name="product_ids_domain" invisible="1"/>
                        <field 
                            name="fournisseur_ids" 
                            widget="many2many_tags" 
                            options="{'color_field': 'color', 'no_create': True}"
                            placeholder="S√©lectionner les fournisseurs..."
                            readonly="state == 'envoye'"
                        />
                        <field 
                            name="product_id" 
                            options="{'no_create': True}"
                            placeholder="S√©lectionner un article..."
                            readonly="state == 'envoye'"
                        />
                        <field name="quantite" readonly="state == 'envoye'"/>
                        <field name="description" placeholder="Description compl√©mentaire du besoin..." readonly="state == 'envoye'"/>
                    </group>
                    <group string="Photo du besoin">
                        <div class="col-6">
                            <field name="photo" widget="image" nolabel="1" options="{'size': [0, 500]}" readonly="state == 'envoye'"/>
                        </div>
                        <field name="photo_filename" invisible="1"/>
                    </group>
                    <!-- Boutons d'action bien visibles pour mobile -->
                    <div class="text-center mt-4 mb-4" invisible="state != 'brouillon'">
                        <button 
                            name="generer_commandes_action" 
                            type="object" 
                            string="üì§ G√©n√©rer les demandes de prix et envoyer" 
                            class="btn btn-primary btn-lg w-100 mb-2"
                            invisible="type_demande != 'demande_prix'"
                            confirm="Voulez-vous g√©n√©rer les demandes de prix et les envoyer aux fournisseurs ?"
                        />
                        <button 
                            name="generer_commandes_action" 
                            type="object" 
                            string="üì§ G√©n√©rer les commandes et envoyer" 
                            class="btn btn-primary btn-lg w-100 mb-2"
                            invisible="type_demande != 'commande'"
                            confirm="Voulez-vous g√©n√©rer les commandes et les envoyer aux fournisseurs ?"
                        />
                    </div>
                    <group string="Commandes g√©n√©r√©es" invisible="purchase_order_count == 0">
                        <field name="purchase_order_ids" nolabel="1" readonly="1">
                            <list>
                                <button name="view_order_action" type="object" icon="fa-search-plus" title="Voir la commande"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="date_order"/>
                                <field name="currency_id" column_invisible="1"/>
                                <field name="amount_total" sum="Total"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="is_demande_prix_simplifiee_list" model="ir.ui.view">
        <field name="name">is.demande.prix.simplifiee.list</field>
        <field name="model">is.demande.prix.simplifiee</field>
        <field name="arch" type="xml">
            <list string="Demandes de prix simplifi√©es" default_order="name desc">
                <field name="name"/>
                <field name="create_date" string="Date"/>
                <field name="type_demande"/>
                <field name="fournisseur_ids" widget="many2many_tags"/>
                <field name="product_id"/>
                <field name="quantite"/>
                <field name="create_uid" string="Cr√©√© par"/>
                <field name="purchase_order_count" string="Commandes"/>
                <field name="state" widget="badge" decoration-info="state == 'brouillon'" decoration-success="state == 'envoye'"/>
            </list>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="is_demande_prix_simplifiee_search" model="ir.ui.view">
        <field name="name">is.demande.prix.simplifiee.search</field>
        <field name="model">is.demande.prix.simplifiee</field>
        <field name="arch" type="xml">
            <search string="Rechercher une demande de prix">
                <field name="name"/>
                <field name="fournisseur_ids"/>
                <field name="product_id"/>
                <field name="create_uid"/>
                <filter name="filter_brouillon" string="Brouillon" domain="[('state', '=', 'brouillon')]"/>
                <filter name="filter_envoye" string="Envoy√©" domain="[('state', '=', 'envoye')]"/>
                <separator/>
                <filter name="filter_demande_prix" string="Demande de prix" domain="[('type_demande', '=', 'demande_prix')]"/>
                <filter name="filter_commande" string="Commande" domain="[('type_demande', '=', 'commande')]"/>
                <separator/>
                <filter name="filter_mes_demandes" string="Mes demandes" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter name="filter_archived" string="Archiv√©s" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter name="group_state" string="√âtat" context="{'group_by': 'state'}"/>
                    <filter name="group_type" string="Type" context="{'group_by': 'type_demande'}"/>
                    <filter name="group_user" string="Utilisateur" context="{'group_by': 'create_uid'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Kanban (optimis√©e pour mobile) -->
    <record id="is_demande_prix_simplifiee_kanban" model="ir.ui.view">
        <field name="name">is.demande.prix.simplifiee.kanban</field>
        <field name="model">is.demande.prix.simplifiee</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="create_date"/>
                <field name="type_demande"/>
                <field name="product_id"/>
                <field name="quantite"/>
                <field name="state"/>
                <field name="photo"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <field name="photo" widget="image" class="o_kanban_image" t-if="record.photo.raw_value"/>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="product_id"/>
                                </div>
                                <div>
                                    <span>Qt√©: </span><field name="quantite"/>
                                </div>
                                <div class="text-muted">
                                    <field name="create_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="is_demande_prix_simplifiee_action" model="ir.actions.act_window">
        <field name="name">Demandes de prix simplifi√©es</field>
        <field name="res_model">is.demande.prix.simplifiee</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="is_demande_prix_simplifiee_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle demande de prix simplifi√©e
            </p>
            <p>
                Cette fonctionnalit√© permet de cr√©er rapidement des demandes de prix 
                ou des commandes fournisseurs depuis un smartphone.
            </p>
        </field>
    </record>

</odoo>
