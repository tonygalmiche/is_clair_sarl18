<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Terme de paiement : 45 jours puis le 30 du mois -->
        <record id="account_payment_term_45days_30th" model="account.payment.term">
            <field name="name">45 jours puis le 30 du mois</field>
            <field name="note">Payment terms: 45 days then 30th of month (or last day if month has less than 30 days)</field>
            <field name="line_ids" eval="[
                Command.clear(),
                Command.create({
                    'value': 'percent', 
                    'value_amount': 100.0, 
                    'delay_type': 'day_after_invoice_date', 
                    'nb_days': 45,
                    'days_next_month': '30'
                })]"/>
        </record>

        <!-- Terme de paiement : 45 jours puis fin de mois (31) -->
        <record id="account_payment_term_45days_end_month" model="account.payment.term">
            <field name="name">45 jours puis fin de mois</field>
            <field name="note">Payment terms: 45 days then end of month</field>
            <field name="line_ids" eval="[
                Command.clear(),
                Command.create({
                    'value': 'percent', 
                    'value_amount': 100.0, 
                    'delay_type': 'day_after_invoice_date', 
                    'nb_days': 45,
                    'days_next_month': '31'
                })]"/>
        </record>

        <!-- Terme de paiement : 30 jours puis le 15 du mois -->
        <record id="account_payment_term_30days_15th" model="account.payment.term">
            <field name="name">30 jours puis le 15 du mois</field>
            <field name="note">Payment terms: 30 days then 15th of month</field>
            <field name="line_ids" eval="[
                Command.clear(),
                Command.create({
                    'value': 'percent', 
                    'value_amount': 100.0, 
                    'delay_type': 'day_after_invoice_date', 
                    'nb_days': 30,
                    'days_next_month': '15'
                })]"/>
        </record>

    </data>
</odoo>